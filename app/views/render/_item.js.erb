 {
    id: '<%=recording.id%>',
    title: '<%=recording.theme%>',
    guid: '<%=recording.audio_link%>',
    description: "<%= (recording.description.blank?) ? js_escape(@podcast.description) : js_escape(recording.description) %>",
    url: "<%=recording.audio_link%>",
    length: "<%=recording.audio_file.byte_size%>", 
    type: "audio/mpeg",
    date: "<%=recording.recorded_at.strftime("%a, %-d %b %Y %H:%M:%S %z")%>",
    duration: <%=recording.audio_file.metadata['duration'].floor() %>,
    speaker: "<%=recording.speaker%>"
}