<%= turbo_stream.append "recordings" do %>
  <%= render partial: "recordings/recording", collection: @recordings %>
<% end %>

<% if @next_page.present? %>
    <%= turbo_stream.replace "load_more" do %>
        <%= turbo_frame_tag "load_more", src: recordings_path(page: @next_page, format: :turbo_stream), loading: :lazy %>
    <% end %>
<% end %>